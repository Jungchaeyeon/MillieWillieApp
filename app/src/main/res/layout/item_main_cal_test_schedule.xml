<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.makeus.milliewillie.ui.MainCalendarViewModel" />
        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.MainCalendarTestActivity" />
        <variable
            name="item"
            type="com.makeus.milliewillie.model.CalendarDayResponse.Result.Plan" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="4dp"
        android:onClick="@{()->vi.onClickItem(item)}"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                style="@style/ColorPickerItem"
                bgTint="@{item.color}"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/oval_30" />

            <TextView
                style="@style/spoqa_medium_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_underline_main_schedule"
                android:text="@{item.title}"
                android:textColor="@color/black_all"
                android:textSize="16sp"
                tools:text="첫 휴우가" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>