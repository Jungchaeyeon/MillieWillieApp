        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/content_cn_img_goto_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/icon_gotobac" />

                <TextView
                    android:id="@+id/content_cn_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/content_cn_img_goto_back"
                    android:text="Title"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/content_cn_text_subtitle"
                    android:layout_width="40dp"
                    android:layout_height="17dp"
                    android:layout_below="@id/content_cn_text_title"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/content_cn_img_goto_back"
                    android:text="subtitle"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/content_cn_text_edit"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:text="@string/edit"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/layout_underline">

                <ImageView
                    android:id="@+id/content_cn_img_date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_date" />

                <TextView
                    android:id="@+id/content_cn_text_d_day"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/content_cn_img_date"
                    android:text="@string/d_day_title"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/content_cn_text_tilt"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/content_cn_text_d_day"
                    android:text="~"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/content_cn_text_tilt"
                    android:text="end_date"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/content_cn_img_down_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_op" />
            </RelativeLayout>

        <!-- expandable layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/layout_underline">

                <ImageView
                    android:id="@+id/content_cn_img_link"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_link"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/content_cn_img_link"
                    android:layout_centerVertical="true"
                    android:text="@string/link"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:id="@+id/content_cn_img_check_todo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_link"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/content_cn_img_check_todo"
                    android:layout_centerVertical="true"
                    android:text="@string/something_for_do"
                    android:textSize="12sp"/>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/content_cn_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

            <LinearLayout
                style="@style/MapBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_underline">

                    <EditText
                        android:id="@+id/content_cn_edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/non"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="D-day Title"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="10dp"
                        android:text="start_d_day"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/content_cn_edit_title"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/content_cn_text_todo"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginStart="24dp"
                        android:layout_centerVertical="true"
                        android:text="@string/goal_aim"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/layout_underline">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/content_cn_todo_recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/fragment_d_day_recycler_item"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_below="@id/content_cn_todo_recycler"
                        >

                        <CheckBox
                            android:id="@+id/content_cn_checkbox"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:layout_centerVertical="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/content_cn_edit_todo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@+id/content_cn_checkbox"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@color/non"
                            android:hint="@string/today_goal_input"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="22dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:backgroundTint="@color/non"
                    android:hint="@string/content_hint"
                    android:textSize="14sp"
                    />

            </LinearLayout>


        </LinearLayout>







</layout>