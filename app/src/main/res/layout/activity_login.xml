<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.LoginActivity" />

        <variable
            name="vm"
            type="com.makeus.milliewillie.ui.LoginViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoginActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="74dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/Wrap"
                android:layout_marginEnd="3dp"
                android:src="@drawable/mini_oval_gray" />

            <ImageView
                style="@style/Wrap"
                android:layout_marginEnd="3dp"
                android:src="@drawable/mini_oval_gray" />

            <ImageView
                style="@style/Wrap"
                android:layout_marginEnd="3dp"
                android:src="@drawable/mini_oval_aquablue" />
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="166dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ani_mw_logintitle" />


        <Button
            style="@style/spoqa_medium_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/background_google_login"
            android:drawableLeft="@drawable/icon_login_google"
            android:foreground="@drawable/ripple_default"
            android:gravity="center"
            android:onClick="@{()->vi.onClickGoogleLogin()}"
            android:text="구글 계정으로 시작하기"
            android:textColor="@color/black_all" />


        <Button
            style="@style/spoqa_medium_14"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_kakao_login"
            android:drawableLeft="@drawable/icon_login_kakao"
            android:foreground="@drawable/ripple_default"
            android:gravity="center"
            android:onClick="@{()->vi.onClickKakaoLogin()}"
            android:text="카카오 계정으로 시작하기"
            android:textColor="@color/black_all" />


    </LinearLayout>
</layout>