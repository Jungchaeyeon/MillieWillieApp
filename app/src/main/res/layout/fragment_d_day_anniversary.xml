<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.dDay.anniversary.AnniversaryFragment" />

    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/d_day_anni_img_cancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/cancel" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="D-day"/>

                <TextView
                    android:id="@+id/d_day_anni_text_complete"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:text="@string/complete"/>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="34dp"
                    android:text="@string/title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/d_day_anni_edit_title"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="@color/non"
                    android:text="@string/title"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="39dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="34dp"
                    android:text="@string/sub_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/d_day_anni_edit_sub_title"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="@color/non"
                    android:text="@string/sub_title"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/d_day_anni_text_classification"
                    android:layout_width="26dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:text="@string/classification"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/d_day_anni_text_classification_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/d_day_anni_text_classification"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/non"
                    android:text="@string/classification"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_left"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/d_day_anni_layout_date"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/d_day_anni_text_date"
                    android:layout_width="26dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:text="@string/date"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/d_day_anni_text_date_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/d_day_anni_text_date"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/non"
                    android:text="@string/date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/d_day_anni_text_date_info"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/d_day_anni_img_date_arrow"
                    android:layout_centerVertical="true"
                    android:text="@string/date"
                    android:textColor="@color/gray" />

                <ImageView
                    android:id="@+id/d_day_anni_img_date_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_left"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/d_day_anni_text_alarm"
                    android:layout_width="26dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:text="@string/alarm"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="171dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/d_day_anni_text_alarm"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/non"
                    android:text="@string/alarm_info"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    />

                <Switch
                    android:id="@+id/d_day_anni_switch_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_track_selector"
                    android:thumb="@drawable/switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/d_day_anni_text_hundred_divided"
                    android:layout_width="96dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:text="@string/hundred_divided_date"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <Switch
                    android:id="@+id/d_day_anni_switch_hundred_divided"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_track_selector"
                    android:thumb="@drawable/switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/d_day_anni_text_content"
                    android:layout_width="26dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:text="@string/content"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/d_day_anni_edit_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/non"
                    android:hint="@string/content_hint"
                    android:textSize="14sp"
                    android:inputType="textPersonName" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</layout>