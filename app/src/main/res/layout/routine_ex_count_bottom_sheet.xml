<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.fragment.RoutineOptionCountBottomSheetFragment" />
    </data>

    <RelativeLayout
        style="@style/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/rebs_count_layout_set"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/rebs_count_text_total_set_title"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:text="@string/set_count"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/rebs_count_text_total_set_input"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rebs_count_text_total_set_title"
                android:text="0 세트"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rebs_count_layout_switch"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/rebs_count_layout_set">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:text="@string/total_set_con"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/ic_baseline_brightness_1_24"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rebs_count_layout_input"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/rebs_count_layout_switch">

            <TextView
                android:id="@+id/rebs_count_text_total_set_count"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:text="0 세트"/>

            <EditText
                android:id="@+id/rebs_count_edit_count"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/rebs_count_text_total_set_count"
                android:maxLength="5"
                android:maxLines="1"
                android:singleLine="true"
                android:backgroundTint="@color/gray"
                android:textAlignment="textEnd"
                android:hint="0"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/rebs_count_text_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/rebs_count_edit_count"
                android:layout_centerVertical="true"
                android:text="개"/>
        </RelativeLayout>

        <!-- 여기서부터 스위치 OFF 시 visibility -->
        <LinearLayout
            android:id="@+id/rebs_count_layout_set_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rebs_count_layout_input"
            android:visibility="visible"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rebs_count_recycler_set"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="8dp"
                tools:listitem="@layout/routine_ex_count_recycler_item"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_add_set"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginBottom="1dp"
                        android:text="@string/set_add"
                        android:textColor="@color/black_all"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rebs_count_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@id/rebs_count_layout_set_add"
            android:background="@drawable/map_btn_border"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </RelativeLayout>



</layout>
