<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemPlanWork"
            type="com.makeus.milliewillie.model.PlansWork.Result" />

        <variable
            name="item"
            type="com.makeus.milliewillie.model.PlansGet.Result.Work" />

        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.plan.PlanOutputActivity" />
    </data>

    <LinearLayout
        android:id="@+id/layout_item_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/chk_box_on_off"
            android:onClick="@{()->vi.onClickChkBox(item)}"
            android:text="@{item.content}"/>

    </LinearLayout>
</layout>