<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.Html" />

        <variable
            name="vi"
            type="com.makeus.milliewillie.ui.routine.ExerciseSetBottomSheetFragment" />
        <variable
            name="vm"
            type="com.makeus.milliewillie.ui.routine.ExerciseSetViewModel" />

    </data>

    <RelativeLayout
        style="@style/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rebs_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rbs_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="16dp"
                android:padding="5dp"
                android:text="@string/classification"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rebs_layout_option_select"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="22dp"
            android:layout_below="@id/rebs_layout_top"
            android:onClick="@{()-> vi.onClickOptionSelect()}"
            android:background="@drawable/routine_option_layout_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="@{vm.liveDataRoutineKind}"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_semo"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rebs_layout_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rebs_layout_option_select"
            android:visibility="invisible"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rebs_layout_first"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:onClick="@{()-> vi.onClickOption(1)}"
                android:background="@drawable/layout_underline">

                <TextView
                    android:id="@+id/rebs_text_first"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/option_weight_count"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_layout_second"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:onClick="@{()-> vi.onClickOption(2)}"
                android:background="@drawable/layout_underline">

                <TextView
                    android:id="@+id/rebs_text_second"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/option_count"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_layout_third"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:onClick="@{()-> vi.onClickOption(3)}">

                <TextView
                    android:id="@+id/rebs_text_third"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/option_time"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>

        <!-- WNC 시작 -->
        <RelativeLayout
            android:id="@+id/rebs_wnc_layout"
            style="@style/BottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rebs_layout_option_select"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rebs_wnc_layout_set"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:id="@+id/rebs_wnc_text_total_set_title"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/set_count"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/rebs_wnc_edit_set_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/non"
                    android:singleLine="true"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rebs_wnc_text_total_set_title"
                    android:hint="0"/>

                <TextView
                    android:id="@+id/rebs_wnc_text_total_set_input"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rebs_wnc_edit_set_count"
                    android:text="세트" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_wnc_layout_switch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/rebs_wnc_layout_set"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/total_set_con" />

                <Switch
                    android:id="@+id/rebs_wnc_switch"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> vi.onClickSwitch()}"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    android:track="@drawable/switch_track_selector"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_wnc_layout_input"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/rebs_wnc_layout_switch"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:id="@+id/rebs_wnc_text_total_set_count"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="0 세트" />

                <EditText
                    android:id="@+id/rebs_wnc_edit_weight"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/rebs_wnc_text_total_set_count"
                    android:backgroundTint="@color/gray"
                    android:hint="0.0"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rebs_wnc_text_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_wnc_edit_weight"
                    android:text="kg" />

                <EditText
                    android:id="@+id/rebs_wnc_edit_count"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/rebs_wnc_text_kg"
                    android:backgroundTint="@color/gray"
                    android:hint="0.0"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rebs_wnc_text_kg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_wnc_edit_count"
                    android:text="개" />
            </RelativeLayout>

            <!-- 여기서부터 스위치 OFF 시 visibility -->
            <LinearLayout
                android:id="@+id/rebs_wnc_layout_set_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebs_wnc_layout_input"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rebs_wnc_recycler_set"
                    replaceAll="@{vm.liveDataAddSetList}"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/routine_ex_wnc_recycler_item" />

                <RelativeLayout
                    android:id="@+id/rebs_wnc_layout_add_set"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_add_set" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginBottom="1dp"
                            android:text="@string/set_add"
                            android:textColor="@color/black_all" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rebs_wnc_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rebs_wnc_layout_set_add"
                android:layout_marginTop="12dp"
                android:background="@drawable/map_btn_border"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>
        <!-- WNC 끝 -->

        <!-- COUNT 시작 -->
        <RelativeLayout
            style="@style/BottomLayout"
            android:id="@+id/rebs_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rebs_layout_option_select"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rebs_count_layout_set"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:id="@+id/rebs_count_text_total_set_title"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/set_count"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/rebs_count_text_total_set_input"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rebs_count_text_total_set_title"
                    android:text="0 세트"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_count_layout_switch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@id/rebs_count_layout_set">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/total_set_con"/>

                <Switch
                    android:id="@+id/rebs_count_switch"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:track="@drawable/switch_track_selector"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_count_layout_input"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@id/rebs_count_layout_switch">

                <TextView
                    android:id="@+id/rebs_count_text_total_set_count"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="0 세트"/>

                <EditText
                    android:id="@+id/rebs_count_edit_count"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/rebs_count_text_total_set_count"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:backgroundTint="@color/gray"
                    android:textAlignment="textEnd"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rebs_count_text_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_count_edit_count"
                    android:layout_centerVertical="true"
                    android:text="개"/>
            </RelativeLayout>

            <!-- 여기서부터 스위치 OFF 시 visibility -->
            <LinearLayout
                android:id="@+id/rebs_count_layout_set_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebs_count_layout_input"
                android:visibility="visible"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rebs_count_recycler_set"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/routine_ex_count_recycler_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_add_set"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginBottom="1dp"
                            android:text="@string/set_add"
                            android:textColor="@color/black_all"/>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rebs_count_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/rebs_count_layout_set_add"
                android:background="@drawable/map_btn_border"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>
        <!-- COUNT 끝 -->

        <!-- TIME 시작 -->
        <RelativeLayout
            style="@style/BottomLayout"
            android:id="@+id/rebs_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rebs_layout_option_select"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rebs_time_layout_set"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:id="@+id/rebs_time_text_total_set_title"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/set_count"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/rebs_time_text_total_set_input"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rebs_time_text_total_set_title"
                    android:text="0 세트"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_time_layout_switch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@id/rebs_time_layout_set">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="@string/total_set_con"/>

                <Switch
                    android:id="@+id/rebs_time_switch"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:track="@drawable/switch_track_selector"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rebs_time_layout_input"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@id/rebs_time_layout_switch">

                <TextView
                    android:id="@+id/rebs_time_text_total_set_count"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:text="0 세트"/>

                <EditText
                    android:id="@+id/rebs_time_edit_hour"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/rebs_time_text_total_set_count"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:backgroundTint="@color/gray"
                    android:textAlignment="textEnd"
                    android:hint="0.0"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rebs_time_text_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_time_edit_hour"
                    android:layout_centerVertical="true"
                    android:text="@string/option_time"/>

                <EditText
                    android:id="@+id/rebs_time_edit_min"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/rebs_time_text_hour"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:backgroundTint="@color/gray"
                    android:textAlignment="textEnd"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rebs_time_text_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_time_edit_min"
                    android:layout_centerVertical="true"
                    android:text="@string/minute"/>

                <EditText
                    android:id="@+id/rebs_time_edit_sec"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/rebs_time_text_min"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:backgroundTint="@color/gray"
                    android:textAlignment="textEnd"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rebs_time_text_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/rebs_time_edit_sec"
                    android:layout_centerVertical="true"
                    android:text="@string/sec"/>
            </RelativeLayout>

            <!-- 여기서부터 스위치 OFF 시 visibility -->
            <LinearLayout
                android:id="@+id/rebs_time_layout_set_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebs_time_layout_input"
                android:visibility="visible"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rebs_time_recycler_set"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    tools:listitem="@layout/routine_ex_time_recycler_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_add_set"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginBottom="1dp"
                            android:text="@string/set_add"
                            android:textColor="@color/black_all"/>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rebs_time_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/rebs_time_layout_set_add"
                android:background="@drawable/map_btn_border"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>
        <!-- TIME 끝 -->



    </RelativeLayout>



</layout>
