<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vi"
            type="com.makeusteam.milliewillie.ui.dDay.ncee.NceeFragment" />
        <variable
            name="vm"
            type="com.makeusteam.milliewillie.ui.dDay.ncee.NceeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/d_day_ncee_layout_date"
            android:onClick="@{()-> vi.onClickDdayDate()}"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/d_day_ncee_text_date"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:text="@string/start_date"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_day_ncee_text_date_selector"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/d_day_ncee_text_date"
                android:backgroundTint="@color/non"
                android:text="@{vm.liveDataToday}"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/d_day_ncee_text_date_info"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/d_day_ncee_img_date_arrow"
                android:text="@{vm.liveDataTodayInfo}"
                android:textColor="@color/text_gray" />

            <ImageView
                android:id="@+id/d_day_ncee_img_date_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/d_day_ncee_text_link"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_marginStart="24dp"
                android:layout_centerVertical="true"
                android:text="@string/link"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/d_day_ncee_edit_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/d_day_ncee_text_link"
                android:backgroundTint="@color/non"
                android:hint="@string/link_hint"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="@{()-> vi.setOnClickLocation()}"
            >

            <TextView
                android:id="@+id/d_day_ncee_text_location"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_marginStart="24dp"
                android:layout_centerVertical="true"
                android:text="@string/location"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/d_day_ncee_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/d_day_ncee_img_location_arrow"
                android:layout_centerVertical="true"
                android:text="@string/location_info"
                android:textColor="@color/text_gray"
                />

            <ImageView
                android:id="@+id/d_day_ncee_img_location_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/d_day_ncee_text_todo"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:text="@string/something_for_do"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/d_day_ncee_todo_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                replaceAll="@{vm.nceeCheckItemList}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/d_day_ncee_todo_recycler"
                >

            <CheckBox
                android:id="@+id/d_day_ncee_checkbox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/d_day_ncee_edit_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/d_day_ncee_checkbox"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/non"
                android:hint="@string/todo_add"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>