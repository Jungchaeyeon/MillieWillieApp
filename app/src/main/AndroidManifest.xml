<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makeus.milliewillie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="2d201bd6dccfb28dcd39158f1557383b" />

        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauthâ€œ -->
            <data android:host="oauth"
                android:scheme="kakao2d201bd6dccfb28dcd39158f1557383b" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.dDay.DdayActivity"/>
        <activity android:name=".ui.LoginActivity"/>
        <activity android:name=".ui.IntroSettingNameActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".ui.IntroServiceTypeActivity"/>
        <activity android:name=".ui.IntroServiceTypeDetailActivity"/>
        <activity android:name=".ui.IntroEnlistDateActivity1"/>
        <activity android:name=".ui.IntroEnlistDateActivity2"/>
        <activity android:name=".ui.IntroGoalActivity"/>
        <activity android:name=".ui.map.MapActivity"/>
    </application>

</manifest>